{
  "name": "sistema-facturacion",
  "version": "1.0.0",
  "description": "Sistema de facturación con Electron y SQLite portable",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack:win": "electron-builder --win --dir",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.sistemafacturacion.app",
    "productName": "Sistema de Facturación",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": "dir",
      "signAndEditExecutable": false,
      "signtoolOptions": {
        "sign": false
      }
    }
  },
  "dependencies": {
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "node-thermal-printer": "^4.6.0",
    "pdfkit": "^0.17.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  }
}
