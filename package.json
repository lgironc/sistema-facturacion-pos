{
  "name": "sistema-facturacion",
  "version": "1.0.0",
  "description": "Sistema de facturación con Electron y MongoDB portable",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.sistemafacturacion.app",
    "productName": "Sistema de Facturación",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.17.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^38.3.0"
  }
}
